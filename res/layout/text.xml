<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/smsbless_ontime_auto_send_flag"
            android:textColor="#ffc68753" />

        <ToggleButton
            android:id="@+id/btn_ontime_flag"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/smsbless_tgbtn_selector"
            android:textOff="@null"
            android:textOn="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="15.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sendsms_content"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:gravity="left|center"
            android:text="定时发送短信："
            android:textSize="16.0sp" />

        <ToggleButton
            android:id="@+id/timingToggle"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:layout_gravity="right|center"
            android:background="@drawable/smsbless_tgbtn_selector"
            android:disabledAlpha="?android:disabledAlpha"
            android:textOff="@null"
            android:textOn="@null" />
    </LinearLayout>

</LinearLayout>